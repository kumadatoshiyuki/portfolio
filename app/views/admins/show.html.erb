<div class="page-title">
  <div class="title_left">
    <h3>管理者詳細</h3>
  </div>
</div>

<div class="col-md-12 col-sm-6 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th></th>

            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">名前カナ</th>
              <td><%= @admin.kana_last_name + @admin.kana_first_name%></td>

            </tr>
            <tr>
              <th scope="row">名前</th>
              <td><%= @admin.last_name + @admin.first_name %></td>

            </tr>
            <tr>
              <th scope="row">年齢</th>
              <td><%= @admin.age %>さい</td>
            </tr>

            <tr>
              <th scope="row">電話番号</th>
              <td><%= @admin.phone %></td>
            </tr>

            <tr>
              <th scope="row">ログインID</th>
              <td><%= @admin.login_id %></td>
            </tr>

            <tr>
              <th scope="row">メール</th>
              <td><%= @admin.email %></td>
            </tr>

            <tr>
              <th scope="row">クラス</th>
              <td><%= @admin.affiliation.affiliation_name %></td>
            </tr>
          </tbody>
        </table>
        <div class="form-group row">
          <div class="col-md-12">
            <%= link_to("戻る", admins_path(), { class: "btn btn-primary"}) %>
            <%= link_to("編集", edit_admin_path(@admin), { class: "btn btn-success"}) %>
            <%= link_to("アカウント削除", admin_path(@admin), data: { confirm: "本当に削除しますか?", }, class: "btn btn btn-danger", method: :delete) %>
          </div>
        </div>
      </div>
    </div>
</div>