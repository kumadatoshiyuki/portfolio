<div class="page-title">
  <div class="title_left">
    <h3>管理者変更</h3>
  </div>
</div>

<div class="col-md-12 col-xs-12">

  <%= render 'layouts/error_messages', item: @admin %>

<%= form_for(@admin, url: admin_path(@admin), html: { method: :put }) do |f| %>
  <%= render "admins/shared/error_messages", resource: @admin %>
        <div class="x_panel">
          <div class="x_content">
        <br>
        <!--<form class="form-horizontal form-label-left input_mask">-->


          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control has-feedback-left" id="inputSuccess2" placeholder="First Name">-->
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control has-feedback-left", :placeholder => "苗字"%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control" id="inputSuccess3" placeholder="Last Name">-->
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", :placeholder => "名前"%>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control has-feedback-left" id="inputSuccess4" placeholder="Email">-->
            <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", class: "form-control has-feedback-left", :placeholder => "苗字カナ"%>
            <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control" id="inputSuccess5" placeholder="Phone">-->
            <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name", class: "form-control", :placeholder => "名前カナ"%>
            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control has-feedback-left" id="inputSuccess2" placeholder="First Name">-->
            <%= f.text_field :age, autofocus: true, autocomplete: "age", class: "form-control has-feedback-left", :placeholder => "年齢"%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control" id="inputSuccess3" placeholder="Last Name">-->
            <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control", :placeholder => "電話番号"%>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control has-feedback-left" id="inputSuccess4" placeholder="Email">-->
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control has-feedback-left", :placeholder => "メール"%>
            <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <!--<input type="text" class="form-control" id="inputSuccess5" placeholder="Phone">-->
            <%= f.attachment_field :image, autocomplete: "image" %>
            <!--<span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>-->
          </div>


        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">クラス</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <%= f.collection_select :affiliation_id, Affiliation.all, :id, :affiliation_name, include_blank: "選択して下さい" %>
                <!--保存先のカラム名, テーブル（モデル）名.all, :実際にDB保存してある選択肢のID, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>-->
                  <!--今回の場合はAffiliationテーブルなので選択肢として使いたいIDが1番から４番-->
              </div>
          </div>


          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">ログインID</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", class: "form-control", :placeholder => "ログインID"%>
              <!--<input type="text" class="form-control" readonly="readonly" placeholder="Read-Only Input">-->
            </div>
          </div>

          <%= f.hidden_field :role, :value => "admin" %>
          <!--<div class="form-group">-->
          <!--  <label class="control-label col-md-3 col-sm-3 col-xs-12">Date Of Birth <span class="required">*</span>-->
          <!--  </label>-->
          <!--  <div class="col-md-9 col-sm-9 col-xs-12">-->
          <!--    <input class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">-->
          <!--  </div>-->
          <!--</div>-->
          <div class="ln_solid"></div>
          <div class="form-group row">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-5">
              <!--<button type="button" class="btn btn-primary">Cancel</button>-->
              <!--<button class="btn btn-primary" type="reset">Reset</button>-->
              <!--<button type="submit" class="btn btn-success">Submit</button>-->
              <%= link_to("戻る", :back, { class: "btn btn-primary"}) %>
              <%= f.submit "更新する", class: "btn btn-success" %>
            </div>
          </div>
          </div>
    <% end %>
        <!--</form>-->
      </div>
        </div>
  </div>
