        <h2>保護者に表示しているお知らせ</h2>
        <div class="clearfix"></div>
      </div>
      <% if @news.nil? %>
      <div class="x_content">
        <article class="media event">
          <div class="media-body">
            <p class="title h2_tag">お知らせはありません</p>

          <div class="margin_top7">
