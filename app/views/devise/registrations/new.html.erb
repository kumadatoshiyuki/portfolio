<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :苗字 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
    <div class="field">
    <%= f.label :苗字カナ %><br />
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
  </div>
  <div class="field">
    <%= f.label :名前カナ %><br />
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
  </div>
  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>
  <div class="field">
    <%= f.label :ログインID %><br />
    <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id" %>
  </div>
  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :クラス %><br />
    <%= f.text_field :affiliation_id, autofocus: true, autocomplete: "affiliation_id" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
    <%= f.hidden_field :role, :value => "admin" %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
