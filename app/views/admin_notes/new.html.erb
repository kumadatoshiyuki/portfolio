<%= form_with model: @admin_note, url: admin_admin_notes_path, local: true do |f| %>
<div class="col-md-6 col-xs-12">
<div class="x_panel">
<div class="x_title">
<h2>連絡長入力画面 <small>保育士記入欄</small></h2>

<div class="clearfix"></div>
</div>
<div class="x_content">

<label>体温 :</label>
<%= f.text_field :body_temperature, class: "form-control" %>

<label>排泄回数 :</label>
<%= f.select :number_toilet, [["1回", 1], ["2回", 2], ["3回", 3], ["4回", 4], ["5回以上", 5]], {include_blank: "選択して下さい"}, {class: 'form-control'} %>




<div class="form-group">
 <%= f.label :睡眠開始時間：, class: 'control-label' %>
 <div class="clearfix"></div>
 <div class="col-sm-12 form-group row form-time-select">
<%= f.time_select :sleep_start, {}, {class: "form-control bootstrap-date"} %>
</div>
</div>

<div class="clearfix"></div>

<div class="form-group">
 <%= f.label :睡眠終了時間：, class: 'control-label' %>
 <div class="clearfix"></div>
 <div class="col-sm-12 form-group row form-time-select">
<%= f.time_select :sleep_end, {}, {class: "form-control bootstrap-date"} %>
</div>
</div>



<div class="clearfix"></div>

<label>主食 :</label>
<%= @meal.staple_food %>
<%= f.select :staple_food_amount_id,Amount.all.collect { |p| [ p.amount_type, p.id ] }, {include_blank: "選択して下さい"}, {class: 'form-control'} %>

<label>主菜 :</label>
<%= @meal.main_dish %>
<%= f.select :main_dish_amount_id,Amount.all.collect { |p| [ p.amount_type, p.id ] }, {include_blank: "選択して下さい"}, {class: 'form-control'} %>

<label>副菜 :</label>
<%= @meal.side_dish %>
<%= f.select :side_dish_amount_id,Amount.all.collect { |p| [ p.amount_type, p.id ] }, {include_blank: "選択して下さい"}, {class: 'form-control'} %>

<label>汁物 :</label>
<%= @meal.soup %>
<%= f.select :soup_amount_id,Amount.all.collect { |p| [ p.amount_type, p.id ] }, {include_blank: "選択して下さい"}, {class: 'form-control'} %>

<label>果物 :</label>
<%= @meal.fruit %>
<%= f.select :fruit_amount_id,Amount.all.collect { |p| [ p.amount_type, p.id ] }, {include_blank: "選択して下さい"}, {class: 'form-control'} %>


<label for="message">保育園での様子:</label>
<%= f.text_area :message, class: "form-control" %>

<%=f.label :日付, class: 'control-label'%>
<%= f.date_field :record_date, class: 'form-control' %>




<!--<textarea id="message" required="required" class="form-control name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>-->
<br>
<%= f.submit "登録" ,class: "btn btn-primary" %>


</div>
</div>
</div>
<% end %>